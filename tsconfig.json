{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true,
      }
    ]
  },
  "include": [
    ".*ts",
    "test.ts",
    "src/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}